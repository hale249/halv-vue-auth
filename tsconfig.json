{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["vite/client"],
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
